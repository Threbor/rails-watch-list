<h1>Lists(Show)</h1>
<p>
<%= @list.name %>
</p>

<%= simple_form_for([@list, @bookmark]) do |f| %>
  <div class="form-inputs">
    <%= f.input :comment %>
    <%= f.association :movie, as: :radio_buttons%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<p>
<%= link_to 'back to list', lists_path %>
</p>

<h2>Bookmark</h2>
<ul>
<% @list.bookmarks.each do |bookmark|  %>
<li> <%= bookmark.comment %> <%= bookmark.movie.title  %> <%= link_to 'delete', bookmark_path(bookmark),  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></li>
<% end %>
</ul>
